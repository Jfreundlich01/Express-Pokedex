<!DOCTYPE html>
    <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <link rel="stylesheet" href="/styles/style.css">
            <title>Document</title>
        </head>
      <body>
        <div class="container">
            <img class = "pokadex" src="/images/pokadex.png" alt="">
          <div class="pokemon-one">
            <div class="pokemon">
              <div class="pokemon-img-lg">
                <img src="{{pokemon.img}}" alt="" />
              </div>
            </div>
          </div>
          <div class="pokemon-name">
            <h1>{{pokemon.name}}</h1>
          </div>
          <div class="pokemon-type">
            <div class="type1">
              <h2>{{pokemon.type[0]}}</h2>
            </div>
            <div class="type2">
              <h2>{{pokemon.type[1]}}</h2>
            </div>
          </div>
          <div class="pokemon-stats">
            <div class="stat-cont">
              <div class="stat-cat">Hp</div>
              <div class="stat-val">{{pokemon.stats.hp}}</div>
            </div>
            <div class="stat-cont">
              <div class="stat-cat">Atk</div>
              <div class="stat-val">{{pokemon.stats.attack}}</div>
            </div>
            <div class="stat-cont">
              <div class="stat-cat">Def</div>
              <div class="stat-val">{{pokemon.stats.defense}}</div>
            </div>
            <div class="stat-cont">
              <div class="stat-cat">SPAK</div>
              <div class="stat-val">{{pokemon.stats.spattack}}</div>
            </div>
            <div class="stat-cont">
              <div class="stat-cat">SPDF</div>
              <div class="stat-val">{{pokemon.stats.spdefense}}</div>
            </div>
          </div>
          <div class="pokemon-moves">
              <ul>
                    {% for move in pokemon.moves.level%}
                  <li>
                      <div class="move">
                        <p>
                            {% if move.learnedat == ""%}
                            <span class= "move-name">{{move.name}}</span>
                            learned at level: 
                            <span class="lvl">0</span>
                            {%else%}
                            <span class= "move-name">{{move.name}}</span>
                            learned at level: 
                            <span class="lvl">{{move.learnedat}}</span>
                            {%endif%}
                        </p>
                      </div>
                  </li>
                  {%endfor%} 
              </ul>
          </div>
          <div class="back">
            <a href="/pokedex">Back</a>
            </div>
          <div class="update">
              <a href="/pokedex/{{currentIndex}}/edit">Update</a>
          </div>
          <div class="delete">
            <form action="/pokedex/{{currentIndex}}?_method=DELETE" method = "POST">
              <input type="submit" value ="Delete">
            </form>
          </div>
        </div>
      </body>
    </html>
    