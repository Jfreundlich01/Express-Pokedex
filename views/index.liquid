<!doctype html>
    <html lang="en">
    <head>
      <meta charset="UTF-8">
      <meta name="viewport"
            content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
      <meta http-equiv="X-UA-Compatible" content="ie=edge">
      <link rel="stylesheet" href="/styles/new-css.css">
      <title>Pokedex</title>
    </head>
    <body>
      <div class="pokedex">
        <div class="left-container">
          <div class="left-container__top-section">
            <div class="top-section__blue"></div>
            <div class="top-section__small-buttons">
              <div class="top-section__red"></div>
              <div class="top-section__yellow"></div>
              <div class="top-section__green"></div>
            </div>
          </div>
          <div class="left-container__main-section-container">
            <div class="left-container__main-section">
              <div class="main-section__white">
                <div class="main-section__black">
                    <div class="left-container__screen">
                        {% for pokemon in allPokemon%}
                        <div class="list-item">

                            <a href="/pokedex/{{forloop.index0}}"><img src="{{pokemon.img}}" alt=""></a>
                        </div>
                        {%endfor%}
                      </div>
                </div>
              </div>
              <div class="left-container_name">
                  <div class="name">
                      <h1></h1>
                  </div>
              </div>
              <div class="left-container__controllers">
                <div class="controllers__buttons">
                    <div class="buttons__button"><a href="#">B</a></div>
                    <div class="buttons__button">A</div>
                </div>
                <div class="controllers__d-pad">
                  <div class="d-pad__cell top"></div>
                  <div class="d-pad__cell left"></div>
                  <div class="d-pad__cell middle"></div>
                  <div class="d-pad__cell right"></div>
                  <div class="d-pad__cell bottom"></div>
                </div>
              </div>
            </div>
            <div class="left-container__right">
              <div class="left-container__hinge"></div>
              <div class="left-container__hinge"></div>
            </div>
          </div>
        </div>
        <div class="right-container">
          <div class="right-container__black">
            <div class="right-container__screen">
            </div>
          </div>
          <div class="right-container__blue">
            <div class="right-container__stats">
                <div class="stat-cat">
                    <div class="stat-name">
                        <h4></h4>
                    </div>
                    <div class="stat-val">
                        <h4></h4>
                    </div>
                </div>
                <div class="stat-cat">
                    <div class="stat-name">
                        <h4></h4>
                    </div>
                    <div class="stat-val">
                        <h4></h4>
                    </div>
                </div>
                <div class="stat-cat">
                    <div class="stat-name">
                        <h4></h4>
                    </div>
                    <div class="stat-val">
                        <h4></h4>
                    </div>
                </div>
                <div class="stat-cat">
                    <div class="stat-name">
                        <h4></h4>
                    </div>
                    <div class="stat-val">
                        <h4></h4>
                    </div>
                </div>
                <div class="stat-cat">
                    <div class="stat-name">
                        <h4></h4>
                    </div>
                    <div class="stat-val">
                        <h4></h4>
                    </div>
                </div>
                <div class="stat-cat">
                    <div class="stat-name">
                        <h4></h4>
                    </div>
                    <div class="stat-val">
                        <h4></h4>
                    </div>
                </div>
            </div>
          </div>
          <div class="right-container__buttons">
            <div class="left-button">Upd</div>
            <div class="right-button">Del</div>
          </div>
        </div>
      </div>
      <script src="app.js"></script>
    </body>
    </html>



